<form class="container container-addnew" style="padding-top: 150px">
    <div class="form-group">
        <label>New Topic:</label>
        <input type="input" class="form-control" id="enter-newtopic">
    </div>
    <div class="form-group">
        <label>Choose a Category</label>
        <select class="form-control" id="addnew-select-categories">
            <option></option>
            <option value="AJAX">AJAX</option>
            <option value="API">API</option>
            <option value="CSS">CSS</option>
            <option value="Debugging">Debugging</option>
            <option value="Express">Express</option>
            <option value="Git">Git</option>
            <option value="Handlebars">Handlebars</option>
            <option value="Heroku">Heroku</option>
            <option value="HTML">HTML</option>
            <option value="JavaScript">JavaScript</option>
            <option value="jQuery">jQuery</option>
            <option value="Local Storage">Local Storage</option>
            <option value="MVC">MVC</option>
            <option value="MySQL">MySQL</option>
            <option value="Node">Node</option>
            <option value="Sequelize">Sequelize</option>
            <option value="Testing">Testing</option>
        </select>
    </div>
    <div class="form-group">
        <label>Source URL:</label>
        <input type="input" class="form-control" id="enter-newURL">
    </div>
    <div class="form-group">
        <label>Comment:</label>
        <input type="input" class="form-control" id="enter-newComment">
    </div>
    <button type="button" class="btn btn-primary" id="add-button">Add</button>
</form>

<div class="container">
    <div class="row" id="successMsg"></div>
    <div class="row" id="newPostEntry">
    </div>
</div>

